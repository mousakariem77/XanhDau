@{
    ViewData["Title"] = "Forgot password Page";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="~/tailwind/build/tailwind.css">
<link rel="stylesheet" href="~/fonts/boxicons.css"/>
<script src="~/js/site.js"></script>

<div class="bg-gradient-to-r from-green-200 to-blue-200 min-h-screen flex items-center justify-center">
    <div class="w-full max-w-lg bg-white rounded-lg shadow-lg p-8">

        <!-- Tiêu đề -->
        <div class="text-center mb-6">
            <h2 class="text-3xl font-bold text-green-700">Quên Mật Khẩu?</h2>
            <p class="text-gray-600 mt-2">Nhập email đã đăng ký để nhận liên kết đặt lại mật khẩu.</p>
        </div>

        <!-- Form nhập email -->
        <form>
            <!-- Trường Email -->
            <div class="mb-4">
                <label for="email" class="block text-gray-700 font-medium mb-2">Địa chỉ Email</label>
                <input type="email" id="email" name="email" placeholder="Nhập email của bạn"
                       class="w-full p-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500 text-gray-800"
                       required/>
            </div>

            <!-- Thông báo lỗi email không hợp lệ -->
            <div id="email-error" class="hidden mb-4 text-red-700 rounded-lg">
                <p>Vui lòng nhập địa chỉ email hợp lệ.</p>
            </div>

            <!-- Nút gửi yêu cầu -->
            <div class="mb-6">
                <button type="submit"
                        class="w-full bg-green-600 text-white py-3 rounded-lg font-semibold transition-all hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-400">
                    Gửi Liên Kết Đặt Lại
                </button>
            </div>

            <!-- Quay lại trang đăng nhập -->
            <div class="text-center">
                <p class="text-gray-600">Bạn đã nhớ mật khẩu?
                    <a asp-controller="Auth" asp-action="Login" class="text-green-600 font-semibold hover:underline">Đăng
                        nhập tại đây</a>
                </p>
            </div>

            <!-- Lời khuyên bảo mật -->
            <div class="mt-4 text-sm text-gray-600">
                <p><strong>Mẹo Bảo Mật:</strong> Kiểm tra hộp thư (bao gồm cả thư rác) để nhận liên kết.</p>
            </div>
        </form>
    </div>
</div>

<!-- Modal lỗi khi nhập email không tồn tại -->
<div id="email-not-found-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">

        <!-- Tiêu đề Modal -->
        <div class="text-center mb-6">
            <h2 class="text-3xl font-extrabold text-green-700">Email Không Tồn Tại</h2>
            <p class="text-gray-600 mt-2">Địa chỉ email bạn nhập không được tìm thấy. Vui lòng kiểm tra lại.</p>
        </div>

        <!-- Thông báo lỗi -->
        <div class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
            <p><strong>Lỗi:</strong> Chúng tôi không tìm thấy tài khoản nào sử dụng email này. Hãy đảm bảo rằng bạn đã
                nhập đúng email.</p>
        </div>

        <!-- Hướng dẫn và liên kết -->
        <div class="mb-6 text-center">
            <p class="text-gray-700">Nếu bạn chắc chắn rằng đã đăng ký bằng email này, vui lòng thử lại sau hoặc liên hệ
                hỗ trợ.</p>
            <p class="text-gray-600 mt-2">
                <a href="/ho-tro" class="text-green-600 font-semibold hover:underline">Cần hỗ trợ?</a>
            </p>
        </div>

        <!-- Nút đóng modal -->
        <div class="flex justify-center">
            <button onclick="closeModal()"
                    class="bg-gray-400 text-white py-2 px-6 rounded-lg font-semibold hover:bg-green-600 focus:outline-none">
                Đóng
            </button>
        </div>
    </div>
</div>

<!-- Cách thức mở và đóng modal -->
<script>
    function showModal() {
        document.getElementById('email-not-found-modal').classList.remove('hidden');
    }

    function closeModal() {
        document.getElementById('email-not-found-modal').classList.add('hidden');
    }
</script>