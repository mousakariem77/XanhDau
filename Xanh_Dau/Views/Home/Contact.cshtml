@{
    ViewData["Title"] = "Contact Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="~/tailwind/build/tailwind.css">
<link rel="stylesheet" href="~/fonts/boxicons.css"/>
<script src="~/js/site.js"></script>

<div class="bg-gray-100">

    <!-- Section giới thiệu về Contact Us -->
    <section class="bg-green-700 text-white py-20">
        <div class="container mx-auto text-center">
            <h1 class="text-4xl font-extrabold">Cảm ơn bạn đã quan tâm đến Xanh Đấu!</h1>
            <p class="mt-4 text-lg">Nếu bạn có bất kỳ câu hỏi nào về sản phẩm, dịch vụ, hoặc muốn hợp tác với chúng tôi,
                đừng ngần ngại liên hệ. Chúng tôi luôn sẵn sàng hỗ trợ bạn.</p>
        </div>
    </section>
</div>

<div class="py-12 bg-main">
    <div class="container mx-auto px-4">
        <!-- Header -->
        <div class="text-center mb-12">
            <h5 class="text-xl font-semibold text-gray-700 mb-2">Liên Hệ</h5>
            <h1 class="text-4xl font-bold text-gray-900">Liên Hệ Mọi Thắc Mắc</h1>
        </div>

        <!-- Contact Info and Form -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-32">
            <!-- Thông Tin Liên Hệ -->
            <div class="space-y-6">
                <h5 class="text-center text-2xl font-semibold mb-6">Thông Tin Liên Hệ</h5>
                <ul class="space-y-4 text-center">
                    <li class="flex justify-center items-center space-x-3">
                        <i class="bx bx-phone text-2xl text-gray-700"></i>
                        <span class="text-lg">+1234567890</span>
                    </li>
                    <li class="flex justify-center items-center space-x-3">
                        <i class="bx bx-envelope text-2xl text-gray-700"></i>
                        <span class="text-lg">example@example.com</span>
                    </li>
                    <li class="flex justify-center items-center space-x-3">
                        <i class="bx bx-user text-2xl text-gray-700"></i>
                        <span class="text-lg">Xanh Đấu</span>
                    </li>
                    <li class="flex justify-center items-center space-x-3">
                        <i class="bx bx-map text-2xl text-gray-700"></i>
                        <span class="text-lg">123 đường Nguyễn Văn Cừ, Cần Thơ, Việt Nam</span>
                    </li>
                </ul>
            </div>

            <!-- Form Liên Hệ -->
            <div>
                <h3 class="text-xl font-semibold text-gray-800 mb-4">Gửi Tin Nhắn Cho Chúng Tôi</h3>
                <form>
                    <div class="space-y-6">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <input type="text" id="name" placeholder="Tên của bạn"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
                            </div>
                            <div>
                                <input type="email" id="email" placeholder="Email của bạn"
                                       class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
                            </div>
                        </div>
                        <div>
                            <input type="text" id="subject" placeholder="Chủ đề"
                                   class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500">
                        </div>
                        <div>
                            <textarea id="message" placeholder="Để lại tin nhắn"
                                      class="w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-green-500"></textarea>
                        </div>
                        <div>
                            <button type="submit"
                                    class="w-full py-3 bg-green-600 text-white font-semibold rounded-lg shadow-md hover:bg-green-500 focus:outline-none focus:ring-2 focus:ring-green-500">
                                Gửi Tin Nhắn
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Google Map -->
        <div class="mt-8 py-20">
            <iframe
                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d31432.92111847232!2d105.7226752!3d10.0073472!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31a0882139720a77%3A0x3916a227d0b95a64!2zVHLGsOG7nW5nIMSQ4bqhaSBo4buNYyBGUFQgQ-G6p24gVGjGoQ!5e0!3m2!1sen!2s!4v1729172472320!5m2!1sen!2s"
                class="w-full h-96 border-0 rounded-lg shadow-lg" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
    </div>
</div>
