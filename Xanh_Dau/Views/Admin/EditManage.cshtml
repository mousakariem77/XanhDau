@model Models.Admin
@{
    ViewData["Title"] = "Edit Admin Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="~/tailwind/build/tailwind.css">
<link rel="stylesheet" href="~/fonts/boxicons.css"/>
<script src="~/js/site.js"></script>

<div class="admin_edit w-full h-screen bg-gray-100 dark:bg-gray-900 flex justify-center items-center">
    <div class="w-full h-full bg-white dark:bg-gray-800 shadow-2xl rounded-2xl p-8 relative">
        <!-- Nút Quay lại -->
        <a asp-controller="Admin" asp-action="Manage"
           class="absolute top-4 left-4 flex items-center gap-2 px-4 py-2 text-gray-700 dark:text-gray-300 
           bg-gray-200 dark:bg-gray-700 rounded-full shadow-md hover:scale-105 transition-transform">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" 
                 viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
            </svg>
            <span class="font-medium">Quay lại</span>
        </a>

        <!-- Tiêu đề -->
        <h3 class="text-3xl font-semibold text-gray-800 dark:text-white text-center mb-6">Chỉnh sửa Quản trị viên</h3>

        <!-- Form Chỉnh Sửa -->
        <form method="post" asp-controller="Admin" asp-action="EditManage">
            <input type="hidden" asp-for="AdminId" />

            <div class="flex flex-col md:flex-row items-center space-y-6 md:space-y-0 md:space-x-8 mt-20">
                <!-- Ảnh đại diện -->
                <div class="relative w-32 h-32 rounded-full overflow-hidden shadow-lg border-4 border-gray-300">
                    <img src="/img/avatar.jpg" alt="Admin Avatar" class="object-cover w-full h-full">
                </div>

                <!-- Thông tin chỉnh sửa -->
                <div class="flex-1 space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <!-- Họ -->
                        <div>
                            <label class="block text-gray-700 dark:text-gray-300 font-medium">Họ</label>
                            <input asp-for="FirstName" type="text"
                                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 
                                          dark:bg-gray-700 dark:text-white dark:border-gray-600">
                        </div>

                        <!-- Tên -->
                        <div>
                            <label class="block text-gray-700 dark:text-gray-300 font-medium">Tên</label>
                            <input asp-for="LastName" type="text"
                                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 
                                          dark:bg-gray-700 dark:text-white dark:border-gray-600">
                        </div>

                        <!-- Username -->
                        <div>
                            <label class="block text-gray-700 dark:text-gray-300 font-medium">Username</label>
                            <input asp-for="Username" type="text" readonly
                                   class="w-full px-4 py-2 border bg-gray-200 dark:bg-gray-700 dark:text-gray-400 rounded-lg">
                        </div>

                        <!-- Email -->
                        <div>
                            <label class="block text-gray-700 dark:text-gray-300 font-medium">Email</label>
                            <input asp-for="Email" type="email"
                                   class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 
                                          dark:bg-gray-700 dark:text-white dark:border-gray-600">
                        </div>

                        <!-- Vai trò -->
                        <div>
                            <label class="block text-gray-700 dark:text-gray-300 font-medium">Vai trò</label>
                            <select asp-for="Role"
                                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 
                                           dark:bg-gray-700 dark:text-white dark:border-gray-600">
                                <option value="admin">Admin</option>
                                <option value="superadmin">Super Admin</option>
                            </select>
                        </div>

                        <!-- Trạng thái -->
                        <div>
                            <label class="block text-gray-700 dark:text-gray-300 font-medium">Trạng thái</label>
                            <select asp-for="Status"
                                    class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500 
                                           dark:bg-gray-700 dark:text-white dark:border-gray-600">
                                <option value="Active">Hoạt động</option>
                                <option value="Disabled">Không hoạt động</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nút Cập nhật -->
            <div class="flex justify-center mt-20 space-x-4">
                <a asp-controller="Admin" asp-action="Manage"
                   class="px-6 py-2 bg-gray-300 text-gray-700 dark:bg-gray-600 dark:text-white rounded-lg 
                   hover:bg-gray-400 dark:hover:bg-gray-500 transition-all duration-300">
                    Hủy
                </a>
                <button type="submit"
                        class="px-6 py-2 bg-green-500 text-white rounded-lg shadow-md 
                        hover:bg-blue-600 transition-all duration-300">
                    Cập nhật
                </button>
            </div>
        </form>
    </div>
</div>
