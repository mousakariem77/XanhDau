@model Models.Category
@{
    ViewData["Title"] = "Edit Category Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="~/tailwind/build/tailwind.css">
<link rel="stylesheet" href="~/fonts/boxicons.css"/>
<script src="~/js/site.js"></script>

<div class="admin_category-edit min-h-screen bg-gray-100">
    <div class="category-edit-container w-full h-full mx-auto bg-white shadow-lg rounded-lg p-6 relative">
        
        <!-- Nút Quay lại -->
        <a asp-controller="Admin" asp-action="Category"
            class="absolute top-6 left-6 flex items-center gap-2 px-4 py-2 border border-gray-300 bg-white hover:bg-gray-200 
            text-gray-800 dark:text-white dark:hover:bg-gray-600 rounded-full shadow-md transition-all duration-300 hover:-translate-x-1">
            <svg class="w-5 h-5 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor" stroke-width="2" 
                viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
            </svg>
            <span class="font-medium">Quay lại</span>
        </a>

        <!-- Tiêu đề -->
        <h3 class="text-2xl font-bold text-gray-900 border-b pb-3 mb-4 text-center">Chỉnh sửa danh mục</h3>

        <form asp-controller="Admin" asp-action="EditCategory" method="post" class="space-y-4">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />

            <div>
                <label class="block text-gray-700 font-semibold">Tên danh mục</label>
                <input type="text" name="Name" value="@Model.Name" 
                    class="w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-300">
            </div>
            
            <div>
                <label class="block text-gray-700 font-semibold">Mô tả</label>
                <textarea name="Description" rows="3"
                    class="w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-300">@Model.Description</textarea>
            </div>

            <div>
                <label class="block text-gray-700 font-semibold">Trạng thái</label>
                <select name="Status" 
                    class="w-full p-2 border border-gray-300 rounded-md focus:ring focus:ring-blue-300">
                    <option value="Active" selected="@(Model.Status == "Active" ? "selected" : null)">Hoạt động</option>
                    <option value="Inactive" selected="@(Model.Status == "Inactive" ? "selected" : null)">Không hoạt động</option>
                    <option value="Pending" selected="@(Model.Status == "Pending" ? "selected" : null)">Chờ duyệt</option>
                </select>
            </div>


            <div class="flex justify-end gap-4 mt-6">
                <button type="submit" 
                    class="px-6 py-2 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 transition">Lưu</button>
                <a asp-controller="Admin" asp-action="Category"
                    class="px-6 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-200 transition">Hủy</a>
            </div>
        </form>
    </div>
</div>
